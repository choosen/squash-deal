%h1 Training info
.row
  .col-md-4.col-md-offset-1
    %h3 Basics
    %p
      %b Owner:
      = @training.owner.display_name
    %p
      %b Date:
      = l @training.date
    %p
      %b Price:
      = @training.price
    %br
    - if can? :update, @training
      = render 'admin_actions_on_training'

  .col-md-6
    - if @training.done?
      - if can?(:update, @training) && !@training.finished?
        = render 'admin_main_actions_on_finished'
      %h3 Present players
      %table.table
        %thead
          %tr
            %th Player
            %th Multi
            %th Action
        %tbody
          = render partial: 'trainings/users_training_done',
            collection: @users_trainings_attended, as: :users_training
      %h3 Absences
      %table.table
        %thead
          %tr
            %th Player
            %th Action
        %tbody
          = render partial: 'trainings/users_training_done',
            collection: @users_trainings_not_attended, as: :users_training
    - else
      - if can? :update, @training
        = link_to 'Invite user to training', invite_training_path(@training),
          class: 'btn btn-default'
      %h2 Invited/Accepted players
      %table.table.table-hover.table-condensed
        %thead
          %tr
            %th Player
            %th Accepted?
            %th Dismissed?
            %th Actions
        %tbody
          = render partial: 'trainings/users_training_undone',
            collection: @users_trainings, as: :users_training
