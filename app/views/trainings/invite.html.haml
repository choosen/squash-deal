%h1 Send training invitation to user

.row
  .col-md-4.col-md-offset-3
    .panel.panel-default
      .panel-body
        = simple_form_for @users_training, url: user_trainings_path(@training),
            method: :post do |f|
          = f.association :user, collection: @not_invited_users, label_method: :display_name, include_blank: false
          = f.hidden_field :training_id, value: @training.id
          = f.button :submit, 'Send invitation'
    = link_to 'Back', @training, class: 'btn btn-default'
