%h1 Listing trainings
.row
  .col-md-6.col-md-offset-2
    %table
      %thead
        %tr
          %th Date
          %th Price
          %th
          %th
          %th

      %tbody
        - @trainings.each do |training|
          %tr
            %td= training.date
            %td= training.price
            %td= link_to 'Show', training
            %td= link_to 'Edit', edit_training_path(training)
            %td= link_to 'Destroy', training, method: :delete,
                                    data: { confirm: 'Are you sure?' }
    %br
.row
  .col-md-6.col-md-offset-2
    = link_to 'New Training', new_training_path

    %br

    .calendar
